{
    "name": "unocha/skeleton",
    "description": "The UN-OCHA composer drupal project skeleton",
    "type": "project",
    "require": {
        "php": ">=5.6",
        "drupal/drupal": "7.59"
    },
    "authors": [
        {
            "name": "Peter Lieverdink",
            "email": "peterl@humanitarianresponse.info"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/7"
        }
    ],
    "minimum-stability": "stable",
    "extra": {
        "drupal-composer-helper": {
            "web-prefix": "html",
            "set-d7-paths": true
        },
        "enable-patching": true,
        "installer-paths": {
            "html/": [
                "type:drupal-core"
            ]
        },
        "preserve-paths": [
            "html/sites/all/libraries",
            "html/sites/all/modules/custom",
            "html/sites/all/modules/features",
            "html/sites/all/themes/custom",
            "html/sites/all/translations",
            "html/sites/default"
        ],
        "patches-file": "composer.patches.json",
        "composer-exit-on-patch-failure": true
    },
    "prefer-stable": true,
    "conflict": {
        "drupal/core": "8.*"
    },
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
